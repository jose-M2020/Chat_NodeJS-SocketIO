<div class="container-fluid">
	<div class="row d-flex justify-content-center">
 
    <!--Seccion izquierda - contactos -->
    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 inf">
      <!-- perfil -->
      <div class="row">
        <div class="col-12 perfil d-flex align-items-center">

            <img src="img/avatar/{{avatar}}" alt="Profile picture">
            <p class="mt-3">{{username}}</p>
        
          <!-- Dropdown -->
          <div class="btn-group dropleft d-flex align-self-start dropdown">
            <a type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" align="right">
              <span><svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="ellipsis-v" class="svg-inline--fa fa-ellipsis-v fa-w-6" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 192 512"><path fill="currentColor" d="M96 184c39.8 0 72 32.2 72 72s-32.2 72-72 72-72-32.2-72-72 32.2-72 72-72zM24 80c0 39.8 32.2 72 72 72s72-32.2 72-72S135.8 8 96 8 24 40.2 24 80zm0 352c0 39.8 32.2 72 72 72s72-32.2 72-72-32.2-72-72-72-72 32.2-72 72z"></path></svg></span>
            </a>
            <div class="dropdown-menu">
              {{!-- <a class="dropdown-item" href="#" >Perfil</a> --}}
              {{!-- <a class="dropdown-item" href="#">Archivados</a> --}}
              {{!-- {{#if user.role == admi}} --}}
              {{!-- <a class="dropdown-item" href="signup">Agregar usuario</a> --}}
              {{!-- {{/if}} --}}
              <a class="dropdown-item" href="/logout">Salir</a>
            </div>
          </div>
        </div>
      </div>
      <!-- fin perfil -->

      <!-- Contactos -->
      <div class="inner-addon right-addon w-100 search">
        <input  type="text" class="form-control my-2" placeholder="Buscar..." />
        <span>
          <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="search" class="svg-inline--fa fa-search fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path></svg>
        </span>
      </div>
      <div class="row perfiles" id="perfiles" style="overflow-x: hidden;/*max-height: 90vh;*/s">
        {{#each dataUsers}}
          <div class="col-12 contact" data-userId="{{_id}}" id="{{username}}">
            {{#if connected}}
              <div class="status" id="online"></div>
            {{else}}
              <div class="status" id="offline"></div>
            {{/if}}
            <img src="img/avatar/{{avatar}}" alt="Profile picture">
            <div class="" style="width: 65%; padding-top: 12px; display: inline-block">
              <b>{{username}}</b>
              <p style="margin-top: 0;">ðŸ˜…ðŸ˜…ðŸ˜…</p>
            </div>
            <small id="time">{{moment date}}</small>
          </div>
        {{/each}}
      </div>
      <!-- fin contactos -->
    </div>
     <!-- fin seccion izquierda -> contactos -->

     <!-- seccion derecha-> chat -->
    <div class="col-lg-7 col-md-0 col-sm-0 col-xs-0 chat" id="chat">
      <div class="d-flex flex-column box-chat" style="height: 100vh;">
        <!-- encabezado -->
        <div class="row d-flex align-items-center cabecera">
          <span id="back">
            <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-left" class="svg-inline--fa fa-chevron-left fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z"></path></svg>
          </span>
          <div id="foto_perfil"><img src="img/unknowUser.png" style="background: lightgrey;"></div>
          <div class="col-8 state"> 
            <p class="mb-0" id="usernameReceiver"></p>
          </div>
        </div>
        <!-- historial chat -->
        <div class="row historial">
          {{!-- Spinner --}}
          <div class="sk-chase spinner">
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
          </div>
          <div class="content">
            <img src="img/notMsg.png" alt="Not messages" style="object-fit: contain; width: 50%; margin: 25px auto; display: block">
            <h3 style="color: white; margin: 10px auto 70px auto">Start chat</h3>
          </div>
        </div>
        <!-- Messages input container -->
        <div class="d-flex justify-content-center align-items-center row" id="chat-footer">
          <div class="mdl-card__supporting-text mdl-color-text--light-blue-50 col-12">
              {{!-- <form id="message-form"> --}}
              <div class="input-group">
                <i class="fa-solid fa-note-sticky sticker"></i>
                <input id="mensaje" class="flex-grow-1" placeholder="Escribe un mensaje..." autocomplete="off">
                <button id="send" type="submit">
                  <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="paper-plane" class="svg-inline--fa fa-paper-plane fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M476 3.2L12.5 270.6c-18.1 10.4-15.8 35.6 2.2 43.2L121 358.4l287.3-253.2c5.5-4.9 13.3 2.6 8.6 8.3L176 407v80.5c0 23.6 28.5 32.9 42.5 15.8L282 426l124.6 52.2c14.2 6 30.4-2.9 33-18.2l72-432C515 7.8 493.3-6.8 476 3.2z"></path></svg>
                  {{!-- <img src="send.png" style="width: 33px; height: 35px; padding: 0 6px 6px 0;"> --}}
                </button>
              </div>
              {{!-- </form> --}}
              <div class="sticker-container d-none">
                <div class="d-flex align-items-center">
                  <div class="position-relative search flex-grow-1">
                    <form action="#" id="searchSticker">
                      <input id="termino" class="w-100" placeholder="Buscar sticker...">
                      <button type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                      </button>
                    </form>
                  </div>
                  <i class="fa-solid fa-xmark close"></i>
                </div>
                <div class="results__sticker-container">
                    {{!-- Spinner --}}
                  <div style="display: none;" class="spinner-search h-100 justify-content-center align-items-center">
                    <div class="sk-chase d-block">
                      <div class="sk-chase-dot"></div>
                      <div class="sk-chase-dot"></div>
                      <div class="sk-chase-dot"></div>
                      <div class="sk-chase-dot"></div>
                      <div class="sk-chase-dot"></div>
                      <div class="sk-chase-dot"></div>
                    </div>
                  </div>
                  <div class="row"></div>
                </div>
              </div>
          </div>
        </div>

      </div>
    </div>
    <!-- fin seccion derecha-> chat -->
  </div>
</div>

